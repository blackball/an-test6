QFITS_DIR := $(BASEDIR)/qfits-an
QFITS_SRCDIR := $(QFITS_DIR)/src
QFITS_INC := -I$(QFITS_DIR)/include
QFITS_LIB := $(QFITS_DIR)/lib/libqfits.a

QFITS_CFLAGS := $(CFLAGS_DEF)
QFITS_LDFLAGS := $(LDFLAGS_DEF)

#export CFLAGS = $(CFLAGS_DEF)
#export LDFLAGS = $(LDFLAGS_DEF)

$(QFITS_LIB):
	$(MAKE) -C $(QFITS_DIR) stage CFLAGS="$(CFLAGS_DEF)" LDFLAGS="$(LDFLAGS_DEF)"

REMAKE_QFITS := remake-qfits
.PHONY: $(REMAKE_QFITS)
$(REMAKE_QFITS):
	$(MAKE) -C $(QFITS_DIR) stage CFLAGS="$(CFLAGS_DEF)" LDFLAGS="$(LDFLAGS_DEF)" CC="$(CC)"


