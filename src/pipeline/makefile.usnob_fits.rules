ifndef $(MAKEFILE_USNOB_FITS_RULES_INCLUDED)
MAKEFILE_USNOB_FITS_RULES_INCLUDED := 1
#export

include Makefile
include makefile.usnob
include makefile.usnob_fits.files

$(USNOB_FITS_PRESENT): $(USNOB_FITS)
	$(MKDIR) $(USNOB_FITS_DIR)
	$(TOUCH) $@

.PHONY: usnob_fits
usnob_fits: $(USNOB_FITS)

$(USNOB_FITS): $(USNOB_PRESENT)
	-$(MKDIR) $(TIMESTAMP_DIR)
	-$(MKDIR) $(LOG_DIR)
	$(MKDIR) $(USNOB_FITS_DIR)
	$(TOUCH) $(TIMESTAMP_DIR)timestamp-usnobtofits-start
	@echo Running: $(USNOBTOFITS) -o $(USNOB_FITS_TEMPLATE) -N $(USNOB_FITS_NSIDE) "<usnob files>"
	@$(USNOBTOFITS) -o $(USNOB_FITS_TEMPLATE) -N $(USNOB_FITS_NSIDE) $(USNOB)
	$(TOUCH) $(TIMESTAMP_DIR)timestamp-usnobtofits-done

endif
