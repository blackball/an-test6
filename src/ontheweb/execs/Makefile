BASEDIR := .
COMMON := an-common

NO_KDTREE := 1
NO_QFITS := 1
export NO_KDTREE
export NO_QFITS

.PHONY: all
all:

include $(COMMON)/makefile.common
include $(COMMON)/makefile.utils

LDFLAGS := $(LDFLAGS_DEF)
LDFLAGS += -lm -lpthread

CFLAGS := $(CFLAGS_DEF)

CFLAGS += $(ANUTILS_INC)

EXECS := watcher

all: $(EXECS)

$(ANUTILS_LIB): $(REMAKE_ANUTILS)

watcher: watcher.o \
		$(ANUTILS_LIB)

.PHONY: tags
tags:
	etags `find . -name "*.h" -o -name "*.c"`

ALL_OBJS := watcher.o

DEP_OBJ := $(ALL_OBJS)

include $(COMMON)/makefile.deps

allclean: clean
	rm -f *.o *~ *.dep 

clean:
	rm -f $(EXECS) $(ALL_OBJS) \
		$(DEPS) deps


